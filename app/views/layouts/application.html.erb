<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : APP_CONFIG['site_name'] %></title>
    <%= stylesheet_link_tag "application" %>
	<%= stylesheet_link_tag "jquery-ui-themes/hot-sneaks/jquery-ui-1.8.13.custom" %>
	
	<%= javascript_include_tag :defaults, "rails.validations", "rails.validations.custom", 'jquery-ui-1.8.13.custom.min' %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
		
		<div id="user_nav">
			<% if user_signed_in? %>
				Signed in as <%= link_to current_user.email, edit_user_registration_path(current_user) %> | 
				<%= link_to "Profile", edit_profile_path(current_user.profile) %> | 
				<%= link_to "Sign out", destroy_user_session_path %>
			<% else %>
				<%= link_to "Sign up", new_user_registration_path %> | <%= link_to "Sign in", new_user_session_path %> or Sign in via: 
				<a href="/auth/google" class="services"><%= image_tag "service_icons/google_32.png", :size => "32x32",  :alt => "Google" %></a>
				<a href="/auth/facebook" class="services"><%= image_tag "service_icons/facebook_32.png", :size => "32x32",  :alt => "Facebook" %></a>
			<% end %>
		</div>
		
		<div id="header">
			<% if show_title? %>
				<%=h content_tag :h1, yield(:title) %>
			<% else %>
				<%=h content_tag :h1, link_to(APP_CONFIG['site_name'], root_url) %>
			<% end %>
		</div>
		
		<%= render 'layouts/adminbar' %>
		
		<%= yield(:navbar) %>
			
		<% flash.each do |name, msg| %>
			<div id="flash_<%= name %>">
				<%= msg %> <a id="close_link">close</a>
			</div>
		<% end %>
      	
		<%= yield %>
		
		<div id="footer">
			<div id="footer_inner">
				<%= yield(:footer) %>
			</div>
		</div>
		
    </div>
  </body>
</html>
