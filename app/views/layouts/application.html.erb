<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag :defaults %>
    <%= ajaxful_rating_style %>
    <%= yield(:head) %>
  </head>
  <body>
	
    <% if admin_signed_in? %>
	    <div id="user_nav">
	    	<h2>Admin</h2>
	    	<%= link_to "manage admins", admins_path %> | 
	    	<%= link_to "manage jurors", jurors_path %> | 
		    Signed in as <%=link_to current_admin.username, edit_admin_path(current_admin) %>. Not you?
		    <%= link_to "Sign out", destroy_admin_session_path %>
		</div>
	<% elsif juror_signed_in? %>
	    <div id="user_nav">
	    	<h2>Juror</h2>
	    	Signed in as <%=link_to current_juror.name, edit_juror_path(current_juror) %>. Not you?
		    <%= link_to "Sign out", destroy_juror_session_path %>
		</div>
	<% end %>
	
	<div class="clear"></div>
	
    <div id="container">
      
		<%=h yield(:navbar) %>
		
		<%- if show_title? -%>
			<h1><%=h yield(:title) %></h1>
		<%- end -%>
		
		<% flash.each do |name, msg| %>
			<%= content_tag :div, msg, :id => "flash_#{name}" %>
			<% content_tag :script, :type => "text/javascript" do %>
				#$('flash_<%= name %>').style.display = 'none';
				#new Effect.Appear('flash_<%= name %>', {duration: .5});
			<% end %>
			<% content_tag :script, :type => "text/javascript" do %>
				setTimeout("new Effect.Fade('flash_<%= name %>');", 2000);
			<% end %>
		<% end %>
		
		<%= yield %>
		
		<%=h yield(:footer) %>
      
    </div>
  </body>
</html>
