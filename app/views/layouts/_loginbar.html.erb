<div id="user_nav">
	<% if user_signed_in? %>
		Signed in as <%= link_to current_user.email, edit_user_registration_path(current_user) %> | 
		<%= link_to "Profile", edit_profile_path(current_user.profile) %> | 
		<%= link_to "Sign out", destroy_user_session_path %>
	<% else %>
		<%= link_to "Sign up", new_user_registration_path %> | <%= link_to "Sign in", new_user_session_path %> or Sign in via: 
		<%= link_to 'Google', '/auth/google' %> or 
		<%= link_to 'Faecbook', '/auth/facebook' %>
	<% end %>
</div>