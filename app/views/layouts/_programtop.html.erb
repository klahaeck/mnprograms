<% content_for :head do %>
	<title><%= @program.title %></title>
	<%= stylesheet_link_tag 'show' %>
<% end %>

<% if admin_signed_in? %>
	<div id="admincontrols">
		<%= link_to "View All Programs", programs_path %> | 
		<%= link_to "Edit", edit_program_path(@program) %> |
		<%= link_to "Destroy", @program, :confirm => 'Are you sure?', :method => :delete %>
	</div>
<% end %>

<% content_for :navbar do %>
	<div id="sideBar">
		<%= link_to image_tag(@program.logo.url(:medium)), root_url + @program.url %>
		<ul id="mainmenu">
			<li><%= link_to "Description", root_url + @program.url %></li>
			<li><%= link_to "Guidelines", root_url + @program.url + '/guidelines' %></li>
			<li><%= link_to "Submit", new_applicant_path(:program_id => @program) %></li>
		</ul>
	</div>
<% end %>

<div id="header">
	<h1><%=h @program.title + " Submission Site" %></h1>
</div>