<% title "Types" %>

<table>
  <tr>
    <th>Title</th>
  </tr>
  <% for type in @types %>
    <tr>
      <td><%= type.title %></td>
	  <td>
	      <%= link_to "Edit", edit_type_path(type) %> | 
	      <%= link_to "Destroy", type, :confirm => 'Are you sure?', :method => :delete %>
	  </td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Type", new_type_path %></p>
